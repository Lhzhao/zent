{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "importHelpers": true,
    "outDir": "es",
    "jsx": "react",
    "declaration": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "lib",
    "es",
    "typings",
    "node_modules",
    "__tests__"
  ],
  "include": [
    "src"
  ]
}